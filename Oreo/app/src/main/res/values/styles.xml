<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:fontFamily">@font/baloo_bhai</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">4sp</item>
        <item name="android:elevation">1.5dp</item>
    </style>

    <style name="AppTheme.ButtonPrimary" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_rounded_primary</item>
    </style>

    <style name="AppTheme.ButtonSecondary" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_rounded_secondary</item>
    </style>

    <style name="AppTheme.ButtonWhite" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/button_rounded_white</item>
    </style>

    <style name="AppTheme.ButtonGreen" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_rounded_green</item>
    </style>

    <style name="AppTheme.ButtonBlue" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">@drawable/button_rounded_blue</item>
    </style>

    <style name="AppTheme.ButtonDisabled" parent="AppTheme.Button">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:background">@drawable/button_rounded_disabled</item>
    </style>

    <style name="AppTheme.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edittext_rounded</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:fontFamily">@font/varela_round</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Spinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/spinner_rounded</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:divider">@color/colorDarkGrey</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

</resources>
