<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView_confirm_bid_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/welcome_background"
            app:layout_constraintBottom_toTopOf="@+id/confirm_constraint_hidden"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView_confirm_profile_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:src="@drawable/default_profile_photo"
            app:civ_border_color="@color/colorWhite"
            app:civ_border_width="3dp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_confirm_bid_image"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/imageView_confirm_bid_image"
            app:layout_constraintStart_toStartOf="@+id/imageView_confirm_bid_image"
            app:layout_constraintTop_toTopOf="@+id/imageView_confirm_bid_image" />

        <TextView
            android:id="@+id/textView_confirm_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.Title"
            android:textColor="@color/colorWhite"
            android:textSize="30sp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/textView_confirm_username"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_confirm_username"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.Title"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/imageView_confirm_profile_picture"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView_confirm_rep"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.Title"
            android:textColor="@color/colorWhite"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_confirm_profile_picture" />

        <TextView
            android:id="@+id/textView_confirm_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:elevation="2dp"
            android:textAlignment="center"
            android:textAppearance="@style/AppTheme.Title"
            android:textColor="@color/colorWhite"
            android:textSize="24sp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_confirm_rep" />

        <ProgressBar
            android:id="@+id/progressBar_confirm"
            style="@style/Widget.AppCompat.ProgressBar"
            android:elevation="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_confirm_profile_picture"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@+id/imageView_confirm_profile_picture"
            app:layout_constraintStart_toStartOf="@+id/imageView_confirm_profile_picture"
            app:layout_constraintTop_toTopOf="@+id/imageView_confirm_profile_picture"
            app:layout_constraintVertical_bias="0.503" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/confirm_constraint_hidden"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/textView_confirm_collection_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="Collection from"
                android:textAppearance="@style/AppTheme.Title"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView_listing_collection"
                app:layout_constraintEnd_toStartOf="@+id/textView_confirm_delivery_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_listing_collection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/textView_confirm_important_details_title"
                app:layout_constraintEnd_toStartOf="@+id/textView_confirm_delivery"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_confirm_delivery_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Delivery to"
                android:textAppearance="@style/AppTheme.Title"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView_confirm_delivery"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_confirm_collection_title"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_confirm_delivery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView_confirm_important_details_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_listing_collection" />

            <TextView
                android:id="@+id/textView_confirm_important_details_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:text="Important Details"
                android:textAppearance="@style/AppTheme.Title"
                android:textSize="18sp"
                app:layout_constraintBottom_toTopOf="@+id/textView_confirm_important_details"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_confirm_important_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toTopOf="@+id/button_bid_agree"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_bid_agree"
                style="@style/AppTheme.ButtonGreen"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:text="I agree to pay £0.00"
                app:layout_constraintBottom_toTopOf="@+id/button_bid_decline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_bid_decline"
                style="@style/AppTheme.ButtonSecondary"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginBottom="24dp"
                android:layout_marginEnd="64dp"
                android:layout_marginStart="64dp"
                android:text="I decline this bid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>